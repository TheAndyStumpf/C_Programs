//Calculate the area of a triangle

#include <stdio.h>
#include <stdlib.h>
     
    int main() {
     
    	/* Define variables */
    	float base, height, area;
     
    	/* Start by entering the base of the triangle */
    	printf("Enter the base of the triangle: \n");
    	scanf("%f", &base);
     
    	/* Then enter the height of the triangle */
    	printf("Enter the height of the triangle: \n");
    	scanf("%f", &height);
     
    	/* Divide the product of base * height by 2 */
    	area = (base * height) / 2;
    	printf("The area of a triangle is %f\n", area);
     
    	return 0;
    }
